{
  "compilerOptions": {
    "jsx": "react",
    "target": "es6",
    "module": "esnext",
    "moduleResolution": "node",
    "sourceMap": true,
    "declaration": true,
    "declarationDir": "./",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "removeComments": false,
    "noImplicitAny": false,
    "suppressImplicitAnyIndexErrors": true,
    "skipLibCheck": true,
    "outDir": "./",
    "lib": ["es6", "dom", "es2016", "es2017"],
    "typeRoots": [
      "node_modules/@types"
    ],
    "types": ["webpack-env", "jest"],
    "allowJs": false,
    "checkJs": false,
    "baseUrl": "./",
    "paths": {
        "lib/*": ["./*"]
    },
    "importHelpers": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true
  },
  "include": [
    "./index.ts",
    "./**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "build",
    "test/**/*.test.ts"
  ]
}
